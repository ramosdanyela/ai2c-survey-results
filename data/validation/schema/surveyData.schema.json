{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["metadata", "sectionsConfig", "uiTexts", "surveyInfo"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["version", "language", "surveyId"],
      "properties": {
        "version": { "type": "string" },
        "language": { 
          "type": "string",
          "pattern": "^[a-z]{2}-[A-Z]{2}$",
          "description": "Formato: pt-BR, en-US, etc."
        },
        "surveyId": { "type": "string" }
      },
      "additionalProperties": false
    },
    "sectionsConfig": {
      "type": "object",
      "required": ["sections"],
      "properties": {
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "index", "name", "icon"],
            "properties": {
              "id": { 
                "type": "string",
                "pattern": "^[a-z0-9-]+$",
                "description": "ID único sem espaços (ex: executive-report)"
              },
              "index": { 
                "type": "number",
                "minimum": 0
              },
              "name": { "type": "string" },
              "icon": { "type": "string" },
              "subsections": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id", "index", "name", "icon"],
                  "properties": {
                    "id": { "type": "string" },
                    "index": { "type": "number", "minimum": 0 },
                    "name": { "type": "string" },
                    "icon": { "type": "string" }
                  }
                }
              },
              "data": {
                "type": "object",
                "description": "Dados da seção. Com conteúdo: data.renderSchema (exceto 'attributes', que é 100% dinâmico e usa data.attributes)."
              },
              "hasSubsections": { "type": "boolean" }
            },
          }
        },
        "components": {
          "type": "object",
          "description": "Documentação dos componentes disponíveis (opcional)"
        }
      }
    },
    "uiTexts": {
      "type": "object",
      "description": "Textos estáticos da interface"
    },
    "surveyInfo": {
      "type": "object",
      "required": ["title", "company", "period", "totalRespondents", "responseRate", "nps", "npsCategory", "questions"],
      "properties": {
        "title": { "type": "string" },
        "company": { "type": "string" },
        "period": { "type": "string" },
        "totalRespondents": { "type": "number", "minimum": 0 },
        "responseRate": { "type": "number", "minimum": 0, "maximum": 100 },
        "nps": { "type": "number", "minimum": -100, "maximum": 100 },
        "npsCategory": { 
          "type": "string",
          "enum": ["Excelente", "Bom", "Regular", "Ruim"],
          "description": "Categoria do NPS"
        },
        "questions": { "type": "number", "minimum": 0 }
      }
    }
  },
  "additionalProperties": false
}

